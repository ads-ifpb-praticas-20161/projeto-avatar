<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="srestoque" transaction-type="JTA">
        <jta-data-source>srestoqueDB</jta-data-source>
        <class>praticas.srestoque.entidades.Cliente</class>
        <class>praticas.srestoque.entidades.Endereco</class>
        <class>praticas.srestoque.entidades.Entrada</class>
        <class>praticas.srestoque.entidades.Funcionario</class>
        <class>praticas.srestoque.entidades.Produto</class>
        <class>praticas.srestoque.entidades.Saida</class>
        <class>praticas.srestoque.entidades.EstoqueMovimento</class>
        <properties>
            <property name="eclipselink.target-database" value="DERBY"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.logging.level" value="ALL"/>
            
        </properties>
    </persistence-unit>
</persistence>